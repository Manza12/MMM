    <xs:element name="score-tree">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" minOccurs="0" type="xs:string"/>
                <xs:element name="composer" minOccurs="0" type="xs:string"/>
                <xs:element name="textures" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="texture" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="chords" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="chord" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="harmonies" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="harmony" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="components">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="component" minOccurs="0" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>