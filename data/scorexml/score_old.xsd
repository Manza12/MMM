        <xs:restriction base="xs:string">
            <xs:enumeration value="point"/>
            <xs:enumeration value="shift"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="positive">
        <xs:restriction base="xs:positiveInteger">
            <xs:minInclusive value="1"/>
        </xs:restriction>
    </xs:simpleType>

